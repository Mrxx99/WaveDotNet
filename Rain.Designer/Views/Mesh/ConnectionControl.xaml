<UserControl x:Class="Rain.Designer.Views.Mesh.ConnectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rain.Designer.Views.Mesh"
			 xmlns:converters="clr-namespace:Rain.Designer.Views.Mesh.Converters"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<converters:MeshPointConverter x:Key="MeshPointConverter" PointDistance="80" Offset="20"/>
	</UserControl.Resources>
	<Line X1="{Binding PointA, Converter={StaticResource MeshPointConverter}, ConverterParameter={x:Static converters:MeshPointConverterDimension.Column}}"
		  Y1="{Binding PointA, Converter={StaticResource MeshPointConverter}, ConverterParameter={x:Static converters:MeshPointConverterDimension.Row}}"
		  X2="{Binding PointB, Converter={StaticResource MeshPointConverter}, ConverterParameter={x:Static converters:MeshPointConverterDimension.Column}}"
		  Y2="{Binding PointB, Converter={StaticResource MeshPointConverter}, ConverterParameter={x:Static converters:MeshPointConverterDimension.Row}}"
		  Stroke="LightBlue" 
		  StrokeThickness="15"/>
</UserControl>
