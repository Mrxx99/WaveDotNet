<UserControl x:Class="Rain.Designer.Views.Mesh.MeshControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rain.Designer.Views.Mesh"
			 xmlns:converters="clr-namespace:Rain.Designer.Views.Mesh.Converters"
			 mc:Ignorable="d">
	<UserControl.Resources>
		<converters:NodePositionConverter x:Key="NodePositionConverter"/>
	</UserControl.Resources>
	<DockPanel>
		<local:NodeDetailsControl DataContext="{Binding SelectedNode}" 
								  Width="100"
								  DockPanel.Dock="Right"/>
		<Grid>
			<local:NodePlaceholderContainerControl DataContext="{Binding Nodes, Converter={StaticResource NodePositionConverter}}"/>
			<local:NodeContainerControl DataContext="{Binding Nodes}"/>
		</Grid>
	</DockPanel>
</UserControl>
