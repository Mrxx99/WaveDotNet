<UserControl x:Class="Rain.Designer.Views.Mesh.NodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rain.Designer.Views.Mesh"
             mc:Ignorable="d">
	<Button Command="{Binding DataContext.SelectNodeCommand, RelativeSource={RelativeSource AncestorType=local:MeshControl}}"
			CommandParameter="{Binding Position}">
		<Button.Template>
			<ControlTemplate TargetType="Button">
				<Border Width="40"
						Height="40"
						Background="DodgerBlue"
						CornerRadius="20"
						BorderBrush="White"
						BorderThickness="4">
				</Border>
			</ControlTemplate>
		</Button.Template>
	</Button>
</UserControl>
