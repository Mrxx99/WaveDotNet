<local:SimpleWaveBlockFormBase
	x:Class="Rain.Designer.Views.Waves.Controls.SimpleWaveBlockForm"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Waves.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="Self"
	d:DesignHeight="450"
	d:DesignWidth="800"
	x:ClassModifier="internal"
	mc:Ignorable="d">
	<Grid>
		<Border
			Width="200"
			MinHeight="20"
			Padding="30,10,30,30"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Background="White"
			BorderBrush="#44000000"
			BorderThickness="1"
			CornerRadius="20">
			<ItemsControl ItemsSource="{Binding Fields, ElementName=Self}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<StackPanel>
							<TextBlock Margin="5,10,0,5" Text="{Binding Name}" />
							<ContentControl Content="{Binding DataContext.Input, RelativeSource={RelativeSource Mode=TemplatedParent}}" DataContext="{Binding DataContext, ElementName=Self}" />
						</StackPanel>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</Border>
	</Grid>
</local:SimpleWaveBlockFormBase>
