<local:SimpleWaveBlockFormBase
	x:Class="Rain.Designer.Views.Waves.Controls.SimpleWaveBlockForm"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Waves.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="Self"
	d:DesignHeight="450"
	d:DesignWidth="800"
	x:ClassModifier="internal"
	mc:Ignorable="d">
	<local:SimpleWaveBlockFormBase.Resources>
		<Style TargetType="TextBox">
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Background" Value="#ccffffff" />
		</Style>
	</local:SimpleWaveBlockFormBase.Resources>
	<ItemsControl ItemsSource="{Binding Fields, ElementName=Self}">
		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<StackPanel>
					<StackPanel Margin="0,10,0,5" Orientation="Horizontal">
						<Rectangle
							Width="10"
							Margin="0,0,5,0"
							Fill="Black"
							Opacity="0.2" />
						<TextBlock Foreground="#bbffffff" Text="{Binding Name}" />
					</StackPanel>
					<ContentControl Content="{Binding DataContext.Input, RelativeSource={RelativeSource Mode=TemplatedParent}}" DataContext="{Binding DataContext, ElementName=Self}" />
				</StackPanel>
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</local:SimpleWaveBlockFormBase>
