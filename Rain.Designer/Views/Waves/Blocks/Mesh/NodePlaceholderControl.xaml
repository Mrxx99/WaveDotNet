<UserControl
	x:Class="Rain.Designer.Views.Waves.Blocks.Mesh.NodePlaceholderControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Waves.Blocks.Mesh"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<Button Command="{Binding DataContext.AddNodeCommand, RelativeSource={RelativeSource AncestorType=local:MeshBlockControl}}" CommandParameter="{Binding}">
		<Button.Template>
			<ControlTemplate TargetType="Button">
				<Border
					Width="40"
					Height="40"
					Background="White"
					BorderBrush="LightSlateGray"
					BorderThickness="1"
					CornerRadius="20">
					<TextBlock
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Foreground="LightSlateGray"
						Text="＋" />
				</Border>
			</ControlTemplate>
		</Button.Template>
	</Button>
</UserControl>
