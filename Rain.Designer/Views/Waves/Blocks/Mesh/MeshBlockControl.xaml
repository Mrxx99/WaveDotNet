<UserControl
	x:Class="Rain.Designer.Views.Waves.Blocks.Mesh.MeshBlockControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="clr-namespace:Rain.Designer.Views.Waves.Blocks.Mesh.Converters"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Waves.Blocks.Mesh"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<UserControl.Resources>
		<converters:NodePositionConverter x:Key="NodePositionConverter" />
	</UserControl.Resources>
	<DockPanel>
		<local:NodeDetailsControl
			Width="100"
			DataContext="{Binding SelectedNode}"
			DockPanel.Dock="Right" />
		<Grid>
			<local:NodePlaceholderContainerControl DataContext="{Binding Nodes, Converter={StaticResource NodePositionConverter}}" />
			<local:ConnectionContainerControl DataContext="{Binding Connections}" />
			<local:NodeContainerControl DataContext="{Binding Nodes}" />
		</Grid>
	</DockPanel>
</UserControl>
