<UserControl
	x:Class="Rain.Designer.Views.Waves.Blocks.Mesh.NodeControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Waves.Blocks.Mesh"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<Button Command="{Binding DataContext.SelectNodeCommand, RelativeSource={RelativeSource AncestorType=local:MeshBlockControl}}" CommandParameter="{Binding Position}">
		<Button.Template>
			<ControlTemplate TargetType="Button">
				<Border
					Width="30"
					Height="30"
					Margin="-15"
					Background="DodgerBlue"
					BorderBrush="White"
					BorderThickness="4"
					CornerRadius="20" />
			</ControlTemplate>
		</Button.Template>
	</Button>
</UserControl>
