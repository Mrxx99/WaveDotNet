<UserControl
	x:Class="Rain.Designer.Views.Waves.Blocks.Mesh.ConnectionControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="clr-namespace:Rain.Designer.Views.Waves.Blocks.Mesh.Converters"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Waves.Blocks.Mesh"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.Resources>
		<converters:MeshPointConverter
			x:Key="MeshPointConverter"
			PointDistance="80"
			Offset="20" />
	</UserControl.Resources>
	<Line
		Stroke="LightBlue"
		StrokeThickness="5"
		X1="{Binding PointA, Converter={StaticResource MeshPointConverter}, ConverterParameter={x:Static converters:MeshPointConverterDimension.Column}}"
		X2="{Binding PointB, Converter={StaticResource MeshPointConverter}, ConverterParameter={x:Static converters:MeshPointConverterDimension.Column}}"
		Y1="{Binding PointA, Converter={StaticResource MeshPointConverter}, ConverterParameter={x:Static converters:MeshPointConverterDimension.Row}}"
		Y2="{Binding PointB, Converter={StaticResource MeshPointConverter}, ConverterParameter={x:Static converters:MeshPointConverterDimension.Row}}" />
</UserControl>
