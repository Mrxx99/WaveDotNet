<UserControl
	x:Class="Rain.Designer.Views.Waves.Blocks.Filters.AmplitudeWaveFilterBlockControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:Rain.Designer.Views.Converters"
	xmlns:controls="clr-namespace:Rain.Designer.Views.Waves.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Waves.Blocks.Filters"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<controls:SimpleWaveBlockForm>
		<controls:SimpleWaveBlockFormField Name="Max. amplitude">
			<TextBox Text="{Binding MaxAmplitude, Converter={c:DoubleToStringConverter}, UpdateSourceTrigger=PropertyChanged}" />
		</controls:SimpleWaveBlockFormField>
	</controls:SimpleWaveBlockForm>
</UserControl>
