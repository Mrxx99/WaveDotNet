<UserControl
	x:Class="Rain.Designer.Views.Plots.PlotControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:Rain.Designer.Views.Converters"
	xmlns:converters="clr-namespace:Rain.Designer.Views.Plots.Converters"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Plots"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<ContentControl>
		<ContentControl.DataContext>
			<Binding>
				<Binding.Converter>
					<c:AsyncConverter>
						<c:AsyncConverter.Converter>
							<c:ChainConverter>
								<c:ChainedConverter Converter="{converters:WaveFactoryToWaveConverter}" />
								<c:ChainedConverter Converter="{converters:WaveToSamplesConverter}" />
							</c:ChainConverter>
						</c:AsyncConverter.Converter>
					</c:AsyncConverter>
				</Binding.Converter>
			</Binding>
		</ContentControl.DataContext>
		<TextBlock Text="{Binding Result}" />
	</ContentControl>
</UserControl>
