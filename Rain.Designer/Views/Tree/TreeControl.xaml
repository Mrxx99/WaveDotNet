<UserControl
	x:Class="Rain.Designer.Views.Tree.TreeControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:Rain.Designer.Views.Converters"
	xmlns:controls="clr-namespace:Rain.Designer.Views.Tree.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Tree"
	xmlns:m="clr-namespace:Rain.Designer.Views.Markups"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:s="clr-namespace:System;assembly=mscorlib"
	xmlns:tc="clr-namespace:Rain.Designer.Views.Tree.Converters"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.Resources>
		<s:Double x:Key="NodeSize">40</s:Double>
		<s:Double x:Key="NodeMarginSize">10</s:Double>
		<Thickness
			x:Key="NodeMargin"
			Bottom="{StaticResource NodeMarginSize}"
			Left="{StaticResource NodeMarginSize}"
			Right="{StaticResource NodeMarginSize}"
			Top="{StaticResource NodeMarginSize}" />
		<m:AddDouble
			x:Key="NodeOuterSize"
			A="{StaticResource NodeSize}"
			B="{m:MultiplyDouble A={StaticResource NodeMarginSize}, B=2}" />
	</UserControl.Resources>
	<Grid>
		<ItemsControl AlternationCount="{x:Static s:Int32.MaxValue}" ItemsSource="{Binding SubTrees}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<Canvas HorizontalAlignment="Center" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Line
						Stroke="LightGreen"
						StrokeThickness="5"
						X1="0"
						X2="{tc:ChildNodePositionConverter NodeIndex={Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource Mode=TemplatedParent}}, Tree={m:DataContextBinding ControlType=local:TreeControl}, Width={m:DataContextBinding Width, ControlType=local:TreeControl}, NodesDistance={StaticResource NodeOuterSize}}"
						Y1="{m:DivideDouble {StaticResource NodeOuterSize}, 2}"
						Y2="{m:MultiplyDouble {StaticResource NodeOuterSize}, 1.5}" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<StackPanel>
			<local:NodeControl DataContext="{Binding}" />
			<StackPanel Orientation="Horizontal">
				<ItemsControl ItemsSource="{Binding SubTrees}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Orientation="Horizontal" />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Grid>
								<local:TreeControl VerticalAlignment="Top" DataContext="{Binding}" />
								<controls:NodeButtonControl
									Width="20"
									Height="20"
									HorizontalAlignment="Center"
									VerticalAlignment="Top"
									Command="{m:DataContextBinding RemoveSubTreeCommand, ControlType=local:TreeControl}"
									CommandParameter="{Binding}"
									Content="－" />
							</Grid>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
