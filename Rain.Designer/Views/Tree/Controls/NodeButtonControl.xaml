<Button
	x:Class="Rain.Designer.Views.Tree.Controls.NodeButtonControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Tree.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="Self"
	d:DesignHeight="450"
	d:DesignWidth="800"
	Background="LightSlateGray"
	mc:Ignorable="d">
	<Button.Template>
		<ControlTemplate TargetType="Button">
			<Border
				Padding="3"
				Background="White"
				CornerRadius="100">
				<Border Background="{Binding Background, ElementName=Self}" CornerRadius="100">
					<TextBlock
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						FontSize="9"
						Foreground="White"
						Text="{Binding Content, ElementName=Self}" />
				</Border>
			</Border>
		</ControlTemplate>
	</Button.Template>
</Button>
