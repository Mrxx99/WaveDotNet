<local:NodePartControlBase
	x:Class="Rain.Designer.Views.Tree.Controls.NodePartControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Tree.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="Self"
	d:DesignHeight="450"
	d:DesignWidth="800"
	x:ClassModifier="internal"
	Background="LightSlateGray"
	mc:Ignorable="d">
	<local:NodePartControlBase.Template>
		<ControlTemplate>
			<Border
				Padding="3"
				Background="White"
				CornerRadius="100">
				<Border Background="{Binding Background, ElementName=Self}" CornerRadius="100">
					<TextBlock
						Margin="0,-2,0,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Foreground="White"
						Text="{Binding Text, ElementName=Self}"
						TextAlignment="Center" />
				</Border>
			</Border>
		</ControlTemplate>
	</local:NodePartControlBase.Template>
</local:NodePartControlBase>
