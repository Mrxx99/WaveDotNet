<UserControl
	x:Class="Rain.Designer.Views.Tree.TreeDesignerControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Rain.Designer.Views.Tree"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:waves="clr-namespace:Rain.Designer.Views.Waves"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="5" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<local:NodesControl
			Grid.Column="0"
			Background="WhiteSmoke"
			DataContext="{Binding Nodes}" />
		<GridSplitter
			Grid.Column="1"
			Width="5"
			HorizontalAlignment="Stretch"
			Background="DarkGray" />
		<local:NodeEditorControl Grid.Column="2" DataContext="{Binding SelectedNode}" />
	</Grid>
</UserControl>
